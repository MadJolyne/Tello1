import time, cv2
from threading import Thread
from djitellopy import Tello
# find import time later, and sleep
tello = Tello()
tello.connect()

# vid
keepRecording = True
tello.streamon()
frame_read = tello.get_frame_read()

def videoRecorder():
    height, width, _ = frame_read.frame.shape
    video = cv2.VideoWriter('video.avi', cv2.VideoWriter_fourcc(*'XVID'), 30, (width, height))

    while keepRecording:
        video.write(frame_read.frame)
        time.sleep(1 / 30)

    video.release()
recorder = Thread(target=videoRecorder)
recorder.start()

tello.takeoff()
# 32 in up at take off, (81cm) (6ft=182.88cm)
tello.move_up(102)
# starts facing east
# east 5ft
tello.move_forward(152)
# face north
tello.rotate_counter_clockwise(90)
# 6ft north
tello.move_forward(183)
# face east
tello.rotate_clockwise(90)
# 3ft down
tello.move_down(92)
# 3ft east
tello.move_forward(91)
# face south
tello.rotate_clockwise(90)
# 1ft up
tello.move_up(31)
# 3ft south
tello.move_forward(91)
# face east
tello.rotate_counter_clockwise(90)
# 6ft east
tello.move_forward(183)
# land, senses height
tello.land()

# vid end
keepRecording = False
recorder.join()
